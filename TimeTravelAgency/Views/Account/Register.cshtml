@model TimeTravelAgency.Domain.ViewModels.Account.RegisterViewModel

@{
    ViewBag.Title = "Регистрация";
    Layout = "_Layout";
}

<h2>Зарегестрироваться</h2>
<form asp-action="Register" asp-controller="Account">
    <div>
        <div class="validation" asp-validation-summary="All"></div>
        <p>
            <label asp-for="Login">Логин</label><br />
            <input type="text" asp-for="Login" />
            <span asp-validation-for="Login"></span>
        </p>
        <p>
            <label asp-for="Password">Пароль</label><br />
            <input type="password" asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </p>
        <p>
            <label asp-for="PasswordConfirm">Пароль</label><br />
            <input type="password" asp-for="PasswordConfirm" />
            <span asp-validation-for="PasswordConfirm"></span>
        </p>

        <p>
            <input type="submit" value="Зарегестрироваться" />
        </p>
        <a asp-controller="Account" asp-action="Login">Войти</a>
    </div>
</form>

