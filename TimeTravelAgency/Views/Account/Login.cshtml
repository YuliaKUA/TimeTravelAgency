@model TimeTravelAgency.Domain.ViewModels.Account.LoginViewModel

@{
    ViewBag.Title = "Вход";
    Layout = "_Layout";
}

<div class="container my-5">
    <div class="row col-md-6 offset-md-3">

        <form asp-action="Login" asp-controller="Account" class="form-wh-radius needs-validation py-4" novalidate>
            <div class="d-flex justify-content-center">
                <h3>Войти</h3>
            </div>
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div class="row mx-3 mb-3">
                <label asp-for="Login" class="form-label col-sm-3">Логин</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" asp-for="Login" required>
                    <span asp-validation-for="Login"></span>
                </div>
            </div>
            <div class="row mx-3 mb-4">
                <label asp-for="Password" class="form-label col-sm-3">Пароль</label>
                <div class="col-sm-9">
                    <input type="password" class="form-control" asp-for="Password" required>
                    <span asp-validation-for="Password"></span>
                </div>
            </div>
            <div class="d-flex justify-content-center">
                <button class="btn btn btn-outline-dark col-4 mb-4" type="submit">Войти</button>
            </div>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item d-flex justify-content-center" asp-controller="Account" asp-action="Register">Первый раз здесь? Зарегистрируйтесь</a>
            <a class="dropdown-item d-flex justify-content-center" href="#">Забыли пароль?</a>
        </form>
    </div>
</div>

